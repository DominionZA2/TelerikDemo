            </div>
            <div class="d-flex gap-2 mb-2">
                <TelerikComboBox TItem="string" TValue="string" Data="@(new List<string> { "TelerikComboBox 1", "TelerikComboBox 2", "TelerikComboBox 3" })" Width="20rem" />
